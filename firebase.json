{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "port": 5000,
    "host": "0.0.0.0",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
